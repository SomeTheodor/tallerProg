programa ejemplo
procesos
  proceso juntarFlores(ES cant:numero)
  comenzar
    mientras HayFlorEnLaEsquina
      cant:= cant+1
      tomarFlor
      si(cant = 10)
        dejarFlores
        cant:=0
  fin
  proceso dejarFlores
  variables
    av,ca:numero
  comenzar
    av:=PosAv
    ca:=PosCa
    BloquearEsquina(10,10)
    Pos(10,10)
    mientras HayFlorEnLaBolsa
      depositarFlor
    Pos(av,ca)
    LiberarEsquina(10,10)
    EnviarMensaje(V,rC)
  fin
  proceso recorrerCa
  variables
    cant,pasos:numero
  comenzar
    pasos:= 0
    repetir 99
      juntarFlores(cant)
      mover
      pasos:= pasos+1
      si(pasos = 15)
        dejarFlores
        pasos:= 0 
    EnviarMensaje(F,rC)
  fin
  proceso cosecharFlores(ES cant:numero)
  comenzar
    BloquearEsquina(10,10)
    Pos(10,10)
    mientras HayFlorEnLaEsquina
      tomarFlor
      cant:= cant+1
    Pos(1,5)
    LiberarEsquina(10,10)
  fin
areas
  c1: AreaP (1,3,100,3)
  c2: AreaP (1,4,100,4)
  cC: AreaP (1,5,1,5)
  dep: AreaC (10,10,10,10)
robots
  robot recolectores
  comenzar
    derecha
    recorrerCa
  fin
  robot cosechador
  variables
    cant:numero
    ok:boolean
  comenzar
    repetir 2
      RecibirMensaje(ok,*)
      mientras (ok = V)
        cosecharFlores(cant)
        RecibirMensaje(ok,*)
    Informar('cant recolectada',cant)
  fin
variables
  r1: recolectores
  r2: recolectores
  rC: cosechador
comenzar
  AsignarArea(r1, c1)
  AsignarArea(r2, c2)
  AsignarArea(rC, cC)
  AsignarArea(r1, dep)
  AsignarArea(r2, dep)
  AsignarArea(rC, dep)
  Iniciar(r1, 1,3)
  Iniciar(r2, 1,4)
  Iniciar(rC, 1,5)
fin